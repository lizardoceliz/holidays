<% javascript '../javascripts/dynamic_states' %>

<div class="block">
	<div class="content">
		<h2>Ingrese sus datos</h2>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :nombre %><br />
		  <%= f.text_field :name %></div>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password %></div>

		  <div><%= f.label "confirmar password" %><br />
		  <%= f.password_field :password_confirmation %></div>

		  <div><%= f.label "country" %><br />
		  <%= collection_select(:country, :country_id, Country.all, :id, :name, options ={:prompt => "-Select a country"}, :class => "country_id") %></div>

		 <div><%= f.label "state" %><br />
		  <%= collection_select(:user, :state_id, State.all, :id, :name, options ={:prompt => "-Select a state"}, :class => "state_id") %></div>

		  <div><%= f.submit "Sign up" %></div>
		<% end %>

		<%= render :partial => "devise/shared/links" %>
	</div>
</div>